{% if website.facebookShowTimeline == true and  (website.facebookTimelineScript is null or website.facebookTimelineScript is empty) %}
				<div class="footerbox">
					<div class="fb-page"
						data-href="{{website.facebookLink}}"
						data-tabs="timeline"
						data-small-header="true"
						data-height="300"
						data-adapt-container-width="true" data-hide-cover="true"
						data-show-facepile="false">
					</div>
				</div>
{% elseif website.facebookShowTimeline  ==  true and  website.facebookTimelineScript is not null %}
  	<div class="footerbox">
		{{ website.facebookTimelineScript| raw}}
	</div>
{% endif %}
