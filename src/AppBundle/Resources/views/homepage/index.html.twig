{% extends "AppBundle::base.html.twig" %}

{% block body %}
<section class="banner_slider">
	<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
		{% for slider in homepage.sliders %}
				<div class="item {% if loop.index == 1 %} active {% endif %}">
					<img src="{{ asset('images/homepage/sliders/') }}{{ slider.path }}" alt="">
					<div class="carousel-caption">
					 <div class="captop">{{ slider.title }}</div>
					 <div class="capmid">{{ slider.subtitle }}</div>
					 <div class="slide_button"><a href="{{ path('contact') }}">{{ slider.buttonText }}</a></div>
					 <div class="slide_social">
						{% if website.hasSocial == true %}
						<h2>Connect Socially</h2>
						{% endif %}
						{% if website.facebookLink is not null %}
						<a href="{{ website.facebookLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos1.png') }}" alt="Connect On Facebook" /></a>
						{% endif %}
						{% if website.twitterLink is not null %}
						<a href="{{ website.twitterLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos2.png') }}" alt="Connect On Twitter" /></a>
						{% endif %}
						{% if website.youtubeLink is not null %}
						<a href="{{ website.youtubeLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos3.png') }}" alt="Connect On Youtube" /></a>
						{% endif %}
						{% if website.googleLink is not null %}
						<a href="{{ website.googleLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos4.png') }}" alt="Connect On Google Plus" /></a>
						{% endif %}
					 </div>
					</div>
				</div>
	   {% endfor %}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>
<section class="bodybox1">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head">
					<h2>{{ aboutUs.aboutUsTitle }}</h2>
					<p>{{ aboutUs.aboutUsText }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="about_body_left">
					{% if aboutUs.path is not null %}
					<img src="{{ asset('images/about_us/') }}{{ aboutUs.path }}" alt="About Us" />
					{% endif %}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="about_body_right">
					<div class="abtr">
						<div class="abtrpic">
							<i class="fa fa-check-circle fa-4x" style="color:{{ dark_color }}"></i>
						</div>
						<div class="abtrinfo">
							<h2>{{ aboutUs.aboutUsFirstPointTitle }}</h2>
							<p>{{ aboutUs.aboutUsFirstPointText }}</p>
						</div>
					</div>
					<div class="abtr">
						<div class="abtrpic">
							<i class="fa fa-check-circle fa-4x" style="color:{{ dark_color }}"></i>
						</div>
						<div class="abtrinfo">
							<h2>{{ aboutUs.aboutUsSecondPointTitle }}</h2>
							<p>{{ aboutUs.aboutUsSecondPointText }}</p>
						</div>
					</div>
					<div class="abtr">
						<div class="abtrpic">
							<i class="fa fa-check-circle fa-4x" style="color:{{ dark_color }}"></i>
						</div>
						<div class="abtrinfo">
							<h2>{{ aboutUs.aboutUsThirdPointTitle }}</h2>
							<p>{{ aboutUs.aboutUsThirdPointText }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="bodybox2">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="review_head">
					<h2>{{ homepage.reviewsTitle }}</h2>
					<p>{{ homepage.reviewsSubtitle }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for review in reviews %}
			<div class="col-sm-3">
				<div class="reviewbox">
					<div class="rvbtop">
						{% for img in review.stars('total', 'star.png') %}
							<img src="{{ asset('bundles/app/images/reviews/') }}{{ img }}" alt="Total rating" />
						{% endfor %}
						<h2>{{ review.title }}</h2>
						<br>
						<h3>{{ review.jobDoneDate | date }}</h3>
					</div>
					<div class="rvmid">
						<div class="rvmdinr">
							<span>Time management </span>
							{% for img in review.stars('time_management', 'star2.png') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Time Management"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Tidiness</span>
							{% for img in review.stars('tidiness') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Tidiness"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Friendly Rating</span>
							{% for img in review.stars('friendly') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Friendly rating"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Value Rating</span>
							{% for img in review.stars('value') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Value Rating"></a>
							{% endfor %}
						</div>
					</div>
					<div class="rvbottom">
						<p>{{ review.message |slice(0, 150) }} {% if review.message |length > 150 %}...{% endif %}</p>
					</div>
					<div class="rvsocial">
						<span>Share :</span>
						<a href="https://www.facebook.com/sharer/sharer.php?u=http://{{ app.request.host }}/reviews/{{ review.id }}" target="_BLANK"><img src="{{ asset('bundles/app/images/reviews/rvs1.png') }}" alt="Share On Facebook" /></a>
						<a href="https://twitter.com/home?status=http://{{ app.request.host }}/reviews/{{ review.id }}" target="_BLANK"><img src="{{ asset('bundles/app/images/reviews/rvs2.png') }}" alt="Share On Twitter" /></a>
					</div>
				</div>
			</div>
	    {% endfor %}
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="view">
					<a href="{{ path('reviews') }}">View more reviews +</a>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="bodybox3">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head">
					<h2>{{ homepage.servicesTitle }}</h2>
					<p>{{ homepage.servicesSubtitle }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for item in services %}
			<div class="col-sm-4">
				<div class="row">
					<div class="servicebox">
					<img src="{{ asset('images/services/') }}{{ item.path }}" alt="{{ item.title }}" />
					<h2>{{ item.title }}</h2>
					<p>{{ item.subtitle }}</p>
					<a href="{{ path('services') }}">Learn more +</a>
				</div>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
</section>
<section class="bodybox2 bx23">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="review_head">
					<h2>{{ homepage.galleryTitle }}</h2>
					<p>{{ homepage.gallerySubtitle }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for item in images %}
			<div class="col-sm-3">
				<div class="jobpic">
					<img src="{{ asset('images/gallery/') }}{{ item.path }}" alt="{{ item.title }}" />
					<div class="jbhover">
						<h2>{{ item.title }}</h2>
						<a href="{{ path('gallery') }}">View More</a>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="view">
					<a href="{{ path('gallery') }}">View more gallery +</a>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="bodybox3">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head">
					<h2>{{ homepage.contactUsTitle }}</h2>
					<p>{{ homepage.contactUsSubtitle }}</p>
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="contact_left">
				<div class="cppic">
					<i class="fa fa-map-marker fa-2x" style="color:{{ dark_color }}"></i>
				</div>
				<div class="cpinfo">
					<p>{{ contact.addressFirstLine }}
					<br>{{ contact.addressSecondLine }}</p>
				</div>
				<br><br>
				<a href="mailto:{{ contact.email }}">
					<i class="fa fa-envelope fa-2x" style="color:{{ dark_color }}"></i>
					{{ contact.email }}
				</a>
				<br><br>
				<p><i class="fa fa-phone fa-2x" style="color:{{ dark_color }}"></i>{{ contact.phone }}</p>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="contact_right">
				<form method="POST">
				  <div class="form-group gfp">
							{{ form_widget(contact_form.name, { 'attr': {'class': 'form-control', 'placeholder' : 'Name'} }) }}
				  </div>
				  <div class="form-group gfp grp2">
				    	{{ form_widget(contact_form.email, { 'attr': {'class': 'form-control', 'placeholder' : 'Email'} }) }}
				  </div>
				  <div class="form-group fgt">
							{{ form_widget(contact_form.message, { 'attr': {'class': 'form-control', 'rows' : '3', 'placeholder' : 'Message' } }) }}
				  </div>
				  <button type="submit" class="btn btn-default">Submit</button>
				</form>
			</div>
		</div>
	</div>
</section>
<section class="contactmap">
	<iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDWh2ugH_oq9rD1WRF9qH0-eIcUjEN-bEg&q={{ website.postcode }}" width="100%" height="310" frameborder="0" style="border:0" allowfullscreen></iframe>
</section>
<section class="subscribe">
	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="subscribe_left">
					<h2>{{ website.subscribeTitle }}</h2>
					<p>{{ website.subscribeSubtitle }}</p>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="subscribe_box">
					<form action="{{ path('subscribe') }}" method="POST">
					  {{ form_widget(subscriber_form.email, { 'attr': {'placeholder': 'Email Address'} }) }}
						<input type="submit" value="" />
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
