{% extends "AppBundle::base.html.twig" %}

{% block header %}
	<title>{{ homepage.metaTitle }}</title>
	<meta name="description" content="{{ homepage.metaDescription }}">
{% endblock %}

{% block body %}
{% if website.disabled %}
{% include 'AppBundle:partials:website_disabled.html.twig' %}
{% else %}
<section class="banner_slider">
	<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
		{% for slider in homepage.sliders %}
				<div class="item {% if loop.index == 1 %} active {% endif %}">
					<img src="{{ asset('images/homepage/sliders/') }}{{ slider.path }}" alt="">
					<div class="carousel-caption">
					 <div class="captop">{{ slider.title }}</div>
					 <div class="capmid">{{ slider.subtitle }}</div>
					 <div class="slide_button"><a href="{{ path('contact') }}">Request A Quote</a></div>
					 <div class="slide_social">
						{% if website.hasSocial == true %}
						<h2>Connect Socially</h2>
						{% endif %}
						{% if website.facebookLink is not null and website.facebookLink | length > 0 and website.facebookLinkEnabled %}
						<a href="{{ website.facebookLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos1.png') }}" alt="Connect On Facebook" /></a>
						{% endif %}
						{% if website.twitterLink is not null and website.twitterLink | length > 0 and website.twitterLinkEnabled %}
						<a href="{{ website.twitterLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos2.png') }}" alt="Connect On Twitter" /></a>
						{% endif %}
						{% if website.youtubeLink is not null and website.youtubeLink | length > 0 and website.youtubeLinkEnabled %}
						<a href="{{ website.youtubeLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos3.png') }}" alt="Connect On Youtube" /></a>
						{% endif %}
						{% if website.googleLink is not null  and website.googleLink | length > 0 and website.googleLinkEnabled %}
						<a href="{{ website.googleLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos4.png') }}" alt="Connect On Google Plus" /></a>
						{% endif %}
						{% if website.linkedinLink is not null  and website.linkedinLink | length > 0 and website.linkedinLinkEnabled %}
						<a href="{{ website.linkedinLink }}" target="_BLANK"><img src="{{ asset('bundles/app/images/global/social/sos5.png') }}" alt="Connect On Linkedin" /></a>
						{% endif %}
					 </div>
					</div>
				</div>
	   {% endfor %}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>
{% if website.showAboutTab == true %}
<section {% if website.showReviewsTab == true %} class="bodybox1" {% else %} class="bodybox2"{% endif %}>
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head" >
					<h2 {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsTitle }}</h2>
					<p {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsText | raw }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="about_body_left">
					{% if aboutUs.path is not null %}
					<img src="{{ asset('images/about_us/') }}{{ aboutUs.path }}" alt="About Us" />
					{% endif %}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="about_body_right">
					<div class="abtr">
						<div class="abtrpic">
							<i {% if website.showReviewsTab == false %} style="color:white" {% endif %} class="fa {{ aboutUs.aboutUsFirstPointImage }} fa-4x" style="color:{{ website.darkColor }}"></i>
						</div>
						<div class="abtrinfo">
							<h2 {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsFirstPointTitle }}</h2>
							<p {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsFirstPointText }}</p>
						</div>
					</div>
					<div class="abtr">
						<div class="abtrpic">
							<i {% if website.showReviewsTab == false %} style="color:white" {% endif %} class="fa {{ aboutUs.aboutUsSecondPointImage }} fa-4x" style="color:{{ website.darkColor }}"></i>
						</div>
						<div class="abtrinfo">
							<h2 {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsSecondPointTitle }}</h2>
							<p {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsSecondPointText }}</p>
						</div>
					</div>
					<div class="abtr">
						<div class="abtrpic">
							<i {% if website.showReviewsTab == false %} style="color:white" {% endif %} class="fa {{ aboutUs.aboutUsThirdPointImage }} fa-4x" style="color:{{ website.darkColor }}"></i>
						</div>
						<div class="abtrinfo">
							<h2 {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsThirdPointTitle }}</h2>
							<p {% if website.showReviewsTab == false %} style="color:white" {% endif %}>{{ aboutUs.aboutUsThirdPointText }}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
{% endif %}
{% if website.showReviewsTab == true %}
<section class="bodybox2">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="review_head">
					<h2>{{ homepage.reviewsTitle }}</h2>
					<p style="color:white">{{ homepage.reviewsSubtitle | raw }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for review in reviews %}
			<div class="col-sm-4">
				<div class="reviewbox">
					<br>
					<div class="rvbtop">
						{% for img in review.stars('total', 'star.png') %}
							<img src="{{ asset('bundles/app/images/reviews/') }}{{ img }}" alt="Total rating" />
						{% endfor %}
						<h2>{{ review.title |slice(0, 30) }} {% if review.title |length > 30 %}...{% endif %}</h2>
						<br>
						<h3>{{ review.jobDoneDate | date }}</h3>
						<br>
						<p><small>{% if review.expertTradesReviewId != 0 and review.expertTradesReviewId is not null %} <i style="color:grey;" class="fa fa-check-circle"></i> <a href="{{ website.trade_url }}/reviews" target="_BLANK" style="color:grey;">Verified By Expert Trades</a>{% endif %} </small></p>

					</div>
					<div class="rvmid">
						<div class="rvmdinr">
							<span>Time management </span>
							{% for img in review.stars('time_management') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Time Management"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Tidiness</span>
							{% for img in review.stars('tidiness') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Tidiness"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Friendly Rating</span>
							{% for img in review.stars('friendly') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Friendly rating"></a>
							{% endfor %}
						</div>
						<div class="rvmdinr">
							<span>Value Rating</span>
							{% for img in review.stars('value') %}
									 <a href="#"><img src="{{asset('bundles/app/images/reviews/') }}{{ img }}" alt="Value Rating"></a>
							{% endfor %}
						</div>
					</div>
					<div class="rvbottom">
						<p>{{ review.message |slice(0, 230) }} {% if review.message |length > 230 %}...{% endif %}</p>
					</div>
					<div class="rvsocial">
						<span>Share :</span>
						<a href="https://www.facebook.com/sharer/sharer.php?u=http://{{ app.request.host }}/reviews/{{ review.id }}" target="_BLANK"><img src="{{ asset('bundles/app/images/reviews/rvs1.png') }}" alt="Share On Facebook" /></a>
						<a href="https://twitter.com/home?status=http://{{ app.request.host }}/reviews/{{ review.id }}" target="_BLANK"><img src="{{ asset('bundles/app/images/reviews/rvs2.png') }}" alt="Share On Twitter" /></a>
					</div>


				</div>
			</div>
	    {% endfor %}
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="view">
					<a href="{{ path('reviews') }}">View more reviews +</a>
				</div>
			</div>
		</div>
	</div>
</section>
{% endif %}
{% if website.showServicesTab == true %}
<section class="bodybox3">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head">
					<h2>{{ homepage.servicesTitle }}</h2>
					<p>{{ homepage.servicesSubtitle | raw }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for item in services %}
			<div class="col-sm-4">
				<div class="row">
					<div class="servicebox">
					<img src="{{ asset('images/services/') }}{{ item.path }}" alt="{{ item.title }}" />
					<h2>{{ item.title }}</h2>
					<p>{{ item.subtitle |striptags | slice(0, 200) | raw}} {% if item.subtitle |length > 200%}...{% endif %}</p>
					{% if item.pageActive %}
					<a href="{{ path('services_view', { slug : item.pageSlug }) }}">Learn more +</a>
					{% else %}
					<a href="{{ path('services') }}">Learn more +</a>
					{% endif %}
				</div>
				</div>
			</div>
			{% endfor %}
		</div>

		<div class="row">
			<div class="col-sm-12">
				<div class="view-color">
					<a href="{{ path('services') }}">View more services +</a>
				</div>
			</div>
		</div>
	</div>
</section>
{% endif %}
{% if website.showGalleryTab == true %}
<section class="bodybox2 bx23">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="review_head">
					<h2>{{ homepage.galleryTitle }}</h2>
					<p style="color:white">{{ homepage.gallerySubtitle | raw }}</p>
				</div>
			</div>
		</div>
		<div class="row">
			{% for key,item in images %}
				{% if item.path is not null %}
					{% if landscape %}
						<div class="col-sm-3">
							<div class="jobpic landscape_all">
								<img src="{{ asset('images/gallery/') }}{{ item.path }}" alt="{{ item.title }}" />
								<div class="jbhover">
									<h2>{{ item.title }}</h2>
									<a href="{{ path('gallery') }}">View More</a>
								</div>
							</div>
						</div>

					{% elseif portrait  %}
						<div class="col-sm-3">
							<div class="jobpic portrait_all">
								<img src="{{ asset('images/gallery/') }}{{ item.path }}" alt="{{ item.title }}" />
								<div class="jbhover">
									<h2>{{ item.title }}</h2>
									<a href="{{ path('gallery') }}">View More</a>
								</div>
							</div>
						</div>
					{% else   %}
						<div class="col-sm-3">
							<div class="jobpic {{pos_items[key]}}">
								<img src="{{ asset('images/gallery/') }}{{ item.path }}" alt="{{ item.title }}" />
								<div class="jbhover">
									<h2>{{ item.title }}</h2>
									<a href="{{ path('gallery') }}">View More</a>
								</div>
							</div>
						</div>
					{% endif %}
				{% endif %}
			{% endfor %}
		</div>
		<div class="row">
			<div class="col-sm-12">
				<div class="view">
					<a href="{{ path('gallery') }}">View more gallery +</a>
				</div>
			</div>
		</div>
	</div>
</section>
{% endif %}
{% if website.showContactTab == true %}
<section id="bodybox3" class="bodybox3">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="about_head">
					<h2>{{ homepage.contactUsTitle }}</h2>
					<p>{{ homepage.contactUsSubtitle | raw }}</p>
				</div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="contact_left">
				<div class="cppic">
					<i class="fa fa-map-marker fa-2x" style="color:{{ website.darkColor }}"></i>
				</div>
				<div class="cpinfo">
					<p>{{ contact.addressFirstLine }}
					<br>{{ contact.addressSecondLine }}</p>
				</div>
				<br><br> <br><br>
				<a href="mailto:{{ contact.email }}">
					<i class="fa fa-envelope fa-2x" style="color:{{ website.darkColor }}"></i>
					{{ contact.email }}
				</a>
				<br><br>
				<p><i class="fa fa-phone fa-2x" style="color:{{ website.darkColor }}"></i> {{ contact.phone }}</p>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="contact_right">
				<form method="POST" name="contactForm" action="{{ path('homepage') }}#bodybox3">
				  <div class="row">
						<div class="form-group col-sm-6">
							{{ form_widget(contact_form.name, { 'attr': {'class': 'form-control', 'placeholder' : 'Name' , 'ng-model' : 'contact.name'} }) }}
				  		</div>
					  <div class="form-group  col-sm-6">
					    	{{ form_widget(contact_form.email, { 'attr': {'class': 'form-control', 'placeholder' : 'Email' , 'ng-model' : 'contact.email'} }) }}
					  </div>
				  </div>
				  <div class="row">
					<div class="form-group col-sm-12">
				    	{{ form_widget(contact_form.phone, { 'attr': {'class': 'form-control', 'placeholder' : 'Phone Number' , 'ng-model' : 'contact.phone'} }) }}
				  	</div>
				  </div>
				  <div class="row">
					<div class="form-group col-sm-12">
							{{ form_widget(contact_form.message, { 'attr': {'class': 'form-control', 'rows' : '3', 'placeholder' : 'Message' , 'ng-model' : 'contact.message' } }) }}
				  	</div>
				  </div>

					<br>
					{% if contactError %}
					<div class="row">
							<div class="col-md-12">
								<div class="alert alert-danger text-center">{{ contactError }}</div>
						</div>
					</div>
					<br>
					{% endif %}
					<div class="row">
						<div class="col-md-12 text-center">
								<div class="g-recaptcha" data-sitekey="6LfVOBUTAAAAANuA1WqMKBYBbS7dC8DwbgINIWnn" data-stoken=" {{ secureToken }}"></div>
						</div>
					</div>
					<br>
					<div class="row">
							<div class="col-md-12">
							  <button ng-disabled="contactForm.$invalid" type="submit" class="btn btn-default">Submit</button>
							</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
{% endif %}

{% if findMeOns | length > 0
	or homepage.findMeOnTitle | length > 0
		or homepage.findMeOnSubtitle | length > 0 %}

<section class="bodybox4">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="find_us_head">
					<h2 style="color:white">{{ homepage.findMeOnTitle }}</h2>
					<p style="color:white">{{ homepage.findMeOnSubtitle | raw }}</p>
				</div>
			</div>
		</div>

		<div class="row">
		{% for findMeOn in findMeOns %}
	    <div class="col-xs-12 col-sm-6 col-md-3">
