<section id="contact" class="bodybox3">
    <div class="container">
        <div class="row mb40">
            <div class="col-md-4 text-center">
                <p class="contact_glyph"><i class="glyphicon glyphicon-map-marker" style="color:{{ website.darkColor }}"></i></p>
                <h5 class="text-uppercase small_head">Our Location</h5>
                <p class="contact_details">{{ contact.addressFirstLine }},<br>
                    {{ contact.addressSecondLine }}</p>
            </div>

            <div class="col-md-4 text-center visible-xs">
                <p class="contact_glyph"><i class="glyphicon glyphicon-phone" style="color:{{ website.darkColor }}"></i></p>
                <h5 class="text-uppercase small_head">Call Us</h5>
                <p class="contact_details">{% set contacts = contact.phone|split(',') %}
                    {% for contact in contacts %}
                        <a href="tel:{{  contact }}">{{  contact }}</a><br>
                    {%endfor%}</p>
            </div>
            <div class="col-md-4 text-center hidden-xs">
                <p class="contact_glyph"><i class="glyphicon glyphicon-phone" style="color:{{ website.darkColor }}"></i></p>
                <h5 class="text-uppercase small_head">Call Us</h5>
                <p class="contact_details">{{ contact.phone |replace({',': '<br>'}) | raw }}</p>
            </div>
            {%  if website.callButton == 0 or website.callButton == 1  %}
                <a href="tel:{{  contact.phone|split(',')[0] }}" class="ctc-button" > <!--Replace with trade's phone number-->
                    <i class="fa fa-phone fa-2x" aria-hidden="true" ></i>
                </a>
            {%  endif  %}

            <div class="col-md-4 text-center">
                <p class="contact_glyph"><i class="glyphicon glyphicon-pencil" style="color:{{ website.darkColor }}"></i></p>
                <h5 class="text-uppercase small_head">Dropp us a line</h5>
                <p class="contact_details"><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-sm-12">
                <div class="about_head">
                    <h2>{{ homepage.contactUsTitle }}</h2>
                    <p>{{ homepage.contactUsSubtitle | raw }}</p>
                </div>
            </div>
        </div>

        <div class="row">        
            <div class="col-md-10 col-md-offset-1 col-sm-12">
                <div class="contact_right">
                    <form method="POST" name="contactForm" action="{{ path('homepage') }}#bodybox3">
                        <div class="row">
                            <div class="form-group col-sm-6">
                                {{ form_widget(contact_form.name, { 'attr': {'class': 'form-control', 'placeholder' : 'Name *' , 'ng-model' : 'contact.name'} }) }}
                                {#                            <input type="text" id="form_name" name="form[name]" required="required" class="form-control" placeholder="Name" ng-model="contact.name" />#}
                            </div>
                            <div class="form-group  col-sm-6">
                                {{ form_widget(contact_form.email, { 'attr': {'class': 'form-control', 'placeholder' : 'Email *' , 'ng-model' : 'contact.email'} }) }}
                                {#                            <input type="email" id="form_email" name="form[email]" class="form-control" placeholder="Email" ng-model="contact.email" />#}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12">
                                {{ form_widget(contact_form.phone, { 'attr': {'class': 'form-control', 'placeholder' : 'Phone Number *' , 'ng-model' : 'contact.phone'} }) }}
                                {#                            <input type="text" id="form_phone" name="form[phone]" required="required" class="form-control" placeholder="Phone Number" ng-model="contact.phone" />#}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12">
                                {{ form_widget(contact_form.message, { 'attr': {'class': 'form-control', 'rows' : '3', 'placeholder' : 'Message *' , 'ng-model' : 'contact.message' } }) }}
                                {#                            <textarea id="form_job_description" name="form[job_description]" required="required" class="form-control" rows="3" placeholder="Message" ng-model="contact.message"></textarea>#}
                            </div>
                        </div>
                        <br>
                        {% if contactError %}
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="alert alert-danger text-center">{{ contactError }}</div>
                                </div>
                            </div>
                            <br>
                        {% endif %}
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <div class="g-recaptcha" data-sitekey="6LfVOBUTAAAAANuA1WqMKBYBbS7dC8DwbgINIWnn" data-stoken=" {{ secureToken }}"></div>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-12">
                                <button ng-disabled="contactForm.$invalid" type="submit" class="btn btn-default">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>