{% extends "AppBundle::base.html.twig" %}

{% block header %}
	<title>{{ item.pageMetaTitle }}</title>
	<meta name="description" content="{{ item.pageMetaDescription }}">

	<style>
	.section-heading{
	  margin-top: 50px;
	  margin-bottom: 30px;
	}
	p {
	  line-height: 1.5;
	  margin: 30px 0;
	  font-size: 16px;
	}
	p a {
	  text-decoration: underline;
	}
	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
	  font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
	  font-weight: 800;
	}
	a {
	  color: #404040;
	}
	a:hover,
	a:focus {
	  color: #0085a1;
	}
	a img:hover,
	a img:focus {
	  cursor: zoom-in;
	}
	blockquote {
	  color: #808080;
	  font-style: italic;
	}
	hr.small {
	  max-width: 100px;
	  margin: 15px auto;
	  border-width: 4px;
	  border-color: white;
	}
	article{
	  margin-bottom: 150px;
	}
	.quicklinks a{
	  color: white;
	}
	</style>

{% endblock %}

{% block body %}
{% if website.disabled %}
{% include 'AppBundle:partials:website_disabled.html.twig' %}
{% else %}
<section class="innerpage_banner service_banner">
	<div class="container">
		<div class="banner_content_bottom_services">
			<h2>{{ item.title }}</h2>
		</div>
	</div>
</section>
<section class="service_page_panel">
	<div class="container">
		<article>
		    <div class="container">
		        <div class="row">
		            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
		                <h2 class="section-heading">{{ item.pageTitle }}</h2>
		                {{ item.pageHtml | raw }}
		            </div>
		        </div>
		    </div>
		</article>
	</div>
</section>

{% endif %}
{% endblock %}
