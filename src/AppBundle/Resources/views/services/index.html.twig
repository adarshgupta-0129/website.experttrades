{% extends "AppBundle::base.html.twig" %}

{% block header %}
	<title>{{ service.metaTitle }}</title>
	<meta name="description" content="{{ service.metaDescription }}">
{% endblock %}

{% block body %}

<section class="innerpage_banner service_banner">
	<div class="container">
		<div class="banner_content_top">
			<p>{{ service.headerText }}</p>
		</div>
		<div class="banner_content_bottom">
			<h2>{{ service.headerTitle }}</h2>
		</div>
	</div>
</section>
<section class="service_page_panel">
	<div class="container">

		{% for item in items %}
		<div class="servicepage_box">
			<div class="row">
					{% if item[0] is defined %}
					<div class="col-sm-4">
						<div class="row">
							<div class="servicebox">
									{% if item[0].path is not null %}
									<img alt="{{ item[0].title }}" src="{{ asset('images/services/') }}{{ item[0].path }}">
									{% endif %}
									<h2>{{ item[0].title }}</h2>
									<p>{{ item[0].subtitle }}</p>
							</div>
						</div>
					</div>
					{% endif %}

					{% if item[1] is defined %}
					<div class="col-sm-4">
						<div class="row">
							<div class="servicebox">
									{% if item[1].path is not null %}
									<img alt="{{ item[1].title }}" src="{{ asset('images/services/') }}{{ item[1].path }}">
									{% endif %}
									<h2>{{ item[1].title }}</h2>
									<p>{{ item[1].subtitle }}</p>
							</div>
						</div>
					</div>
					{% endif %}

					{% if item[2] is defined %}
					<div class="col-sm-4">
						<div class="row">
							<div class="servicebox">
									{% if item[2].path is not null %}
									<img alt="{{ item[2].title }}" src="{{ asset('images/services/') }}{{ item[2].path }}">
									{% endif %}
									<h2>{{ item[2].title }}</h2>
									<p>{{ item[2].subtitle }}</p>
							</div>
						</div>
					</div>
					{% endif %}
			</div>
		</div>
		{% endfor %}

		<div class="team_click srvclk">
				<h2>Click below to get yourself a quote</h2>
				<div class="teamq"><div class="slide_button"><a href="{{ path('contact') }}">Get A Quote</a></div></div>
		</div>
	</div>
</section>
<section class="subscribe susin">
	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="subscribe_left">
					<h2>{{ website.subscribeTitle }}</h2>
					<p>{{ website.subscribeSubtitle }}</p>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="subscribe_box">
					<form action="{{ path('subscribe') }}" method="POST">
					  {{ form_widget(subscriber_form.email, { 'attr': {'placeholder': 'Email Address'} }) }}
						<input type="submit" value="GO" />
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
{% endblock %}
